{
  "tasks": {
    "send": "deno run --allow-read --allow-net --allow-env --env main.ts",
    "dev": "deno run --watch --allow-read --allow-net --allow-env main.ts"
  },
  "imports": {
    "std/": "https://deno.land/std@0.224.0/"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "compilerOptions": {
    "strict": true
  }
}
